<div class="demo_title">
  <h1> <%= "Tools available (#{@products.count})" %> </h1>
</div>
<div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-3 mt-5">
  <% @products.each do |product| %>
    <div class="tpn_card">
      <img src="https://images.unsplash.com/photo-1586458995526-09ce6839babe?q=80&w=2946&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="w-100 mb-4" />
      <h5> <%= product.name %> </h5>
      <p> <%= product.description %> </p>
      <p> <%= product.price %> </p>
      <%= link_to "Explore", product_path(product), class: "btn tpn_btn" %>
    </div>
  <% end %>
</div>
